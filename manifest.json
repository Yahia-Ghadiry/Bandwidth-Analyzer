{

  "manifest_version": 2,
  "name": "BandwidthAnalizer",
  "version": "1.0",
  "homepage_url":"https://noneYet.com",
  "description": "A tool that helps you analize used data to help you not exceed your monthly data cap",

  "icons":
  {
      "48": "icons/border-48.png"
  },


  "browser_action":
  {
      "default_icon": "icons/tmp.png",
      "default_title": "Data Usage Analizer",
      "default_popup": "/popup/popup.html"
  },


  "background":
  {
      "scripts": ["/src/dexie.js", "/background/background.js"]
  },


  "permissions": [
      "tabs",
      "storage",
      "unlimitedStorage",
      "webRequest",
      "<all_urls>"
  ]

}